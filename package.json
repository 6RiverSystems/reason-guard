{
  "name": "@6river/reason-guard",
  "version": "0.0.0-development",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/6RiverSystems/reason-guard.git"
  },
  "main": "dist/src/index.js",
  "contributors": [
    "David Durschlag <ddurschlag@6river.com>"
  ],
  "scripts": {
    "lint": "eslint --ext .ts .",
    "only:build": "tsc",
    "only:test": "NODE_ENV=test nyc mocha ${MOCHA_OPTS}",
    "only:lCov": "NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov",
    "ci:codecov": "codecov",
    "prebuild": "npm run lint",
    "build": "npm run only:build",
    "pretest": "npm run build",
    "test": "npm run only:test",
    "precommit": "npm test",
    "htmlcov": "npm run htmlcov:$(bash -c 'echo $OSTYPE')",
    "htmlcov:linux-gnu": "xdg-open coverage/index.html",
    "htmlcov:darwin": "open coverage/index.html",
    "clean": "rm -rf coverage/ dist/ .nyc_output/"
  },
  "dependencies": {},
  "devDependencies": {
    "@6river/commitlint-config-6river": "2.1.7",
    "@commitlint/cli": "8.1.0",
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.7",
    "@types/node": "12.6.9",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "chai": "4.2.0",
    "codecov": "3.5.0",
    "eslint": "6.1.0",
    "eslint-config-6river": "2.1.0",
    "husky": "3.0.2",
    "mocha": "6.2.0",
    "mocha-junit-reporter": "1.23.1",
    "nyc": "14.1.1",
    "source-map-support": "0.5.13",
    "typescript": "3.5.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e ${HUSKY_GIT_PARAMS}"
    }
  },
  "commitlint": {
    "extends": [
      "@6river/commitlint-config-6river"
    ]
  }
}
